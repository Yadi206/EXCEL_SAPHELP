<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
    <ribbon>
        <tabs>
            <tab idMso="TabAddIns" label="SAP助手(by Tiger)">
                <group id="group2" label="关于">
                    <button id="button2" onAction="button2_Click" label="联系作者" />
                    <button id="button5" onAction="button5_Click" label="开源代码" />
                </group>
                <group id="gp_RFC" label="SAP登陆">
                    <button id="bt_Connect" onAction="bt_Connect_Click" label="配置默认登陆信息" />
                    <button id="bn_Login" onAction="bn_Login_Click" label="后台登陆" />
                    <button id="bn_LogonGui" onAction="bn_LogonGui_Click" label="登陆GUI客户端" />
                    <toggleButton id="tgb_ConfigFlag" label="未读取到默认配置" />
                    <toggleButton id="tgb_LogonFlag" label="未链接" />
                    <button id="bnReSet" onAction="bnReSet_Click" label="引用数据库" />
                </group>
                <group id="group1" label="读取表信息">
                    <box id="box1">
                        <toggleButton id="tgb_flag" onAction="tgb_flag_Click" label="离线查询模式(点击切换为在线模式)" />
                    </box>
                    <box id="box2">
                        <button id="button1" onAction="button1_Click" label="获取SAP常用表清单" />
                        <button id="button3" onAction="button3_Click" visible="false" label="根据A列更新本地表结构" />
                    </box>
                    <box id="box5">
                        <button id="bn_ReadTableS" onAction="bn_ReadTableS_Click" label="读取表结构" />
                    </box>
                </group>
                <group id="group3" label="剪切板文本处理">
                    <button id="bn_SignUp" onAction="bn_SignUp_Click" label="负号提前" />
                    <button id="bn_FL" onAction="bn_FL_Click" label="分列处理(ALV导出在剪切板中)" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>